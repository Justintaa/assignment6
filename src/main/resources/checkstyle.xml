<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//PCheckstyle//DTD Checkstyle Configuration 1.3//EN" "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">
<module>

    <!-- Checks for Java Code Style -->
    <module name="Checker">
        <module name="TreeWalker">
            <!-- Indentation checks -->
            <module name="Indentation">
                <property name="basicOffset" value="4"/>
                <property name="lineWrapping" value="80"/>
                <property name="tabWidth" value="4"/>
            </module>

            <!-- Javadoc checks -->
            <module name="JavadocMethod"/>
            <module name="JavadocType"/>
            <module name="JavadocVariable"/>

            <!-- Line Length -->
            <module name="LineLength">
                <property name="max" value="100"/>
            </module>

            <!-- Naming convention -->
            <module name="NamingConvention"/>
        </module>
    </module>

</module>
